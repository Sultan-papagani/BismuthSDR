{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "configure",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "build",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "run",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "run",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "dependsOn":["Build"],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Kill",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/"
            },
            "command": "Kill",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "echo": true
            }
        },
    ]
}